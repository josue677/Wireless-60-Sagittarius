#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// --------------------------------------------------------------------------------------------------------------------------------------------------------------------
// |   ESC   |    Q    |    W    |    E    |    R    |    T    |                                          |    Y    |    U    |    I    |    O    |    P    |    \    |
// |   TAB   |    A    |    S    |    D    |    F    |    G    |                                          |    H    |    J    |    K    |    L    |    ;    |    '    |
// |  SHIFT  |    Z    |    X    |    C    |    V    |    B    | CTRL+A  | CTRL+C  |  |  CTRL+V |  CTRL+X |    N    |    M    |    ,    |    .    |    /    |  R CTRL |
//                               |   GUI   |   DEL   | RETURN  |  SPACE  | ESCAPE  |  |  RETURN |  SPACE  |   TAB   |   BSPC  |  R ALT  |
            bindings = <
    &kp ESC &kp ESC    &kp Q    &kp W    &kp E     &kp R     &kp T                  &kp Y    &kp U     &kp I     &kp O     &kp P     &kp LBRC   &kp RBRC  &kp BSLH
    &kp ESC &kp TAB    &kp A    &kp S    &kp D     &kp F     &kp G                  &kp H    &kp J     &kp K     &kp L     &kp SEMI  &kp SQT    &kp RET   &kp BSLH
    &kp ESC &kp LSHIFT &kp Z    &kp X    &kp C     &kp V   &bt BT_CLR_ALL           &kp N    &kp M     &kp COMMA &kp DOT   &kp FSLH  &kp RSHIFT &kp RCTRL &kp ESC
    &kp LCTRL &kp LGUI  &kp LALT &none    &none     &none   &kp SPACE               &kp RALT &none     &none     &kp RCTRL &none     &kp D      &none     &kp RALT
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };
    };
};
